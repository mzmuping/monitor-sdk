{
  "compilerOptions": {
    "sourceMap": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "removeComments": true,
    "downlevelIteration": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "declarationDir": "./dist",
    "target": "es5",
    "lib": [
      "es2015",
      "dom"
    ],
    "baseUrl": "."
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}